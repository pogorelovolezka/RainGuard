@{
    ViewData["Title"] = "Weather App";
}

<div class="container">
    <h2>Weather Forecast</h2>

    @Html.Partial("_WeatherAlertModal")

    <form id="searchForm">
        <label>Enter city:</label>
        <input type="text" id="searchCity" class="form-control" placeholder="Enter city">
        <button type="submit" class="btn btn-primary mt-2">Get Weather</button>
    </form>

    <hr>

    <div id="weatherResult"></div>
</div>

<script src="~/js/weather.js"></script>
